<h1>Productos en tiempo real</h1>

<form id="productForm">
  <input name="title" placeholder="Título" required />
  <input name="description" placeholder="Descripción" />
  <input name="price" type="number" step="0.01" placeholder="Precio" required />
  <input name="thumbnail" placeholder="URL imagen" />
  <input name="code" placeholder="Código" />
  <input name="stock" type="number" placeholder="Stock" />
  <button type="submit">Agregar</button>
</form>

<hr/>

<div id="productList" class="cards-container">
  {{#each products}}
    <div class="card" data-id="{{this.id}}">
      <img src="{{this.thumbnail}}" alt="{{this.title}}" />
      <h3>{{this.title}}</h3>
      <p>{{this.description}}</p>
      <p>Precio: ${{this.price}}</p>
      <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button>
    </div>
  {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/realtime.js"></script>
